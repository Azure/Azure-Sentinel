        "metadata":{
        "comments": "This playbook will ingest OKTA events logs into Sentinel.",
        "author": "Yaniv Shasha"
        },
    "parameters": {
        "PlaybookName": {
            "defaultValue": "OktaEvents-to-Sentinel",
            "type": "String"
