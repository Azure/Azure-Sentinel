    },
    "variables": {

 "azureloganalyticsdatacollector": "[concat('azureloganalyticsdatacollector-', parameters('PlaybookName'))]",
        "azuremonitorlogs_1": "[concat('azuremonitorlogs_1-', parameters('PlaybookName'))]"

    },
