{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.1",
    "metadata": {
        "comments": "This playbook will send a tag to your IntSights account for every IOC that was sent by IntSights\nand seen in your environment so that you can further analyze the data in the IntSights platform.",
        "author": "Shir Sabag - IntSights"
    },
    "parameters": {
        "PlaybookName": {
            "defaultValue": "Post-Tags-And-Comments-To-Your-IntSights-Account",
            "type": "string"
        },
        "UserName": {
            "defaultValue": "<username>@<domain>",
            "type": "string"
        },
        "IntsightsAccountID": {
            "type": "string"
        },
        "IntsightsGlobalAPIKey": {
            "type": "securestring"
        }
    },
    "variables": {
        "AzureSentinelConnectionName": "[concat('azuresentinel-', parameters('PlaybookName'))]"
    },
    "resources": [
        {
            "type": "Microsoft.Web/connections",
            "apiVersion": "2016-06-01",
            "name": "[variables('AzureSentinelConnectionName')]",
            "location": "[resourceGroup().location]",
            "properties": {
                "displayName": "[parameters('UserName')]",
                "customParameterValues": {},
                "api": {
                    "id": "[concat('/subscriptions/', subscription().subscriptionId, '/providers/Microsoft.Web/locations/', resourceGroup().location, '/managedApis/azuresentinel')]"
                }
            }
        },
        {
            "type": "Microsoft.Logic/workflows",
            "apiVersion": "2017-07-01",
            "name": "[parameters('PlaybookName')]",
            "location": "eastus",
            "dependsOn": [
                "[resourceId('Microsoft.Web/connections', variables('AzureSentinelConnectionName'))]"
            ],
            "properties": {
                "state": "Enabled",
                "definition": {
                    "$schema": "https://schema.management.azure.com/providers/Microsoft.Logic/schemas/2016-06-01/workflowdefinition.json#",
                    "contentVersion": "1.0.0.0",
                    "parameters": {
                        "$connections": {
                            "defaultValue": {},
                            "type": "Object"
                        },
                        "accountID": {
                            "defaultValue": "[parameters('IntSightsAccountID')]",
                            "type": "String"
                        },
                        "apiKey": {
                            "defaultValue": "[parameters('IntSightsGlobalAPIKey')]",
                            "type": "securestring"
                        }
                    },
                    "triggers": {
                        "When_a_response_to_an_Azure_Sentinel_alert_is_triggered": {
                            "type": "ApiConnectionWebhook",
                            "inputs": {
                                "body": {
                                    "callback_url": "@{listCallbackUrl()}"
                                },
                                "host": {
                                    "connection": {
                                        "name": "@parameters('$connections')['azuresentinel']['connectionId']"
                                    }
                                },
                                "path": "/subscribe"
                            }
                        }
                    },
                    "actions": {
                        "For_each_Entity": {
                            "foreach": "@triggerBody()?['Entities']",
                            "actions": {
                                "Switch_Entity_Type": {
                                    "runAfter": {},
                                    "cases": {
                                        "Domain": {
                                            "case": "host",
                                            "actions": {
                                                "Append_to_commentsEntities_-_Domain": {
                                                    "runAfter": {
                                                        "Append_to_tagsEntities_-_Domain": [
                                                            "Succeeded"
                                                        ]
                                                    },
                                                    "type": "AppendToArrayVariable",
                                                    "inputs": {
                                                        "name": "commentsEntities",
                                                        "value": {
                                                            "comment": "@{variables('commentValue')}",
                                                            "iocValue": "@{concat(item()['HostName'], '.', item()['DnsDomain'])}"
                                                        }
                                                    }
                                                },
                                                "Append_to_tagsEntities_-_Domain": {
                                                    "runAfter": {},
                                                    "type": "AppendToArrayVariable",
                                                    "inputs": {
                                                        "name": "tagsEntities",
                                                        "value": {
                                                            "iocValue": "@{concat(item()['HostName'], '.', item()['DnsDomain'])}",
                                                            "tag": "@{variables('tagValue')}"
                                                        }
                                                    }
                                                }
                                            }
                                        },
                                        "Hash": {
                                            "case": "filehash",
                                            "actions": {
                                                "Append_to_commentsEntities_-_Hash": {
                                                    "runAfter": {
                                                        "Append_to_tagsEntities_-_Hash": [
                                                            "Succeeded"
                                                        ]
                                                    },
                                                    "type": "AppendToArrayVariable",
                                                    "inputs": {
                                                        "name": "commentsEntities",
                                                        "value": {
                                                            "comment": "@{variables('commentValue')}",
                                                            "iocValue": "@{item()['Value']}"
                                                        }
                                                    }
                                                },
                                                "Append_to_tagsEntities_-_Hash": {
                                                    "runAfter": {},
                                                    "type": "AppendToArrayVariable",
                                                    "inputs": {
                                                        "name": "tagsEntities",
                                                        "value": {
                                                            "iocValue": "@{item()['Value']}",
                                                            "tag": "@{variables('tagValue')}"
                                                        }
                                                    }
                                                }
                                            }
                                        },
                                        "IP": {
                                            "case": "ip",
                                            "actions": {
                                                "Append_to_commentsEntities_-_IP": {
                                                    "runAfter": {
                                                        "Append_to_tagsEntities_-_IP": [
                                                            "Succeeded"
                                                        ]
                                                    },
                                                    "type": "AppendToArrayVariable",
                                                    "inputs": {
                                                        "name": "commentsEntities",
                                                        "value": {
                                                            "comment": "@{variables('commentValue')}",
                                                            "iocValue": "@{item()['Address']}"
                                                        }
                                                    }
                                                },
                                                "Append_to_tagsEntities_-_IP": {
                                                    "runAfter": {},
                                                    "type": "AppendToArrayVariable",
                                                    "inputs": {
                                                        "name": "tagsEntities",
                                                        "value": {
                                                            "iocValue": "@{item()['Address']}",
                                                            "tag": "@{variables('tagValue')}"
                                                        }
                                                    }
                                                }
                                            }
                                        },
                                        "URL": {
                                            "case": "url",
                                            "actions": {
                                                "Append_to_commentsEntities_-_URL": {
                                                    "runAfter": {
                                                        "Append_to_tagsEntities_-_URL": [
                                                            "Succeeded"
                                                        ]
                                                    },
                                                    "type": "AppendToArrayVariable",
                                                    "inputs": {
                                                        "name": "commentsEntities",
                                                        "value": {
                                                            "comment": "@{variables('commentValue')}",
                                                            "iocValue": "@{item()['Url']}"
                                                        }
                                                    }
                                                },
                                                "Append_to_tagsEntities_-_URL": {
                                                    "runAfter": {},
                                                    "type": "AppendToArrayVariable",
                                                    "inputs": {
                                                        "name": "tagsEntities",
                                                        "value": {
                                                            "iocValue": "@{item()['Url']}",
                                                            "tag": "@{variables('tagValue')}"
                                                        }
                                                    }
                                                }
                                            }
                                        }
                                    },
                                    "default": {
                                        "actions": {}
                                    },
                                    "expression": "@items('For_each_Entity')['Type']",
                                    "type": "Switch"
                                }
                            },
                            "runAfter": {
                                "Initialize_commentValue": [
                                    "Succeeded"
                                ]
                            },
                            "type": "Foreach"
                        },
                        "HTTP_POST_Comments": {
                            "runAfter": {
                                "For_each_Entity": [
                                    "Succeeded"
                                ]
                            },
                            "type": "Http",
                            "inputs": {
                                "authentication": {
                                    "password": "@parameters('apiKey')",
                                    "type": "Basic",
                                    "username": "@parameters('accountID')"
                                },
                                "body": "@variables('commentsEntities')",
                                "headers": {
                                    "Content-Type": "application/json"
                                },
                                "method": "POST",
                                "uri": "https://api.intsights.com/public/v2/iocs/comments/batch"
                            }
                        },
                        "HTTP_POST_Tags": {
                            "runAfter": {
                                "For_each_Entity": [
                                    "Succeeded"
                                ]
                            },
                            "type": "Http",
                            "inputs": {
                                "authentication": {
                                    "password": "@parameters('apiKey')",
                                    "type": "Basic",
                                    "username": "@parameters('accountID')"
                                },
                                "body": "@variables('tagsEntities')",
                                "headers": {
                                    "Content-Type": "application/json"
                                },
                                "method": "POST",
                                "uri": "https://api.intsights.com/public/v2/iocs/tags/batch"
                            }
                        },
                        "Initialize_commentValue": {
                            "runAfter": {
                                "Initialize_tagValue": [
                                    "Succeeded"
                                ]
                            },
                            "type": "InitializeVariable",
                            "inputs": {
                                "variables": [
                                    {
                                        "name": "commentValue",
                                        "type": "string",
                                        "value": "The IOC matched an indicator in your environment at @{formatDateTime(utcNow(),'MMM dd, yyyy')}"
                                    }
                                ]
                            }
                        },
                        "Initialize_commentsEntities": {
                            "runAfter": {},
                            "type": "InitializeVariable",
                            "inputs": {
                                "variables": [
                                    {
                                        "name": "commentsEntities",
                                        "type": "array",
                                        "value": []
                                    }
                                ]
                            }
                        },
                        "Initialize_tagValue": {
                            "runAfter": {
                                "Initialize_tagsEntities": [
                                    "Succeeded"
                                ]
                            },
                            "type": "InitializeVariable",
                            "inputs": {
                                "variables": [
                                    {
                                        "name": "tagValue",
                                        "type": "string",
                                        "value": "Azure Sentinel Match"
                                    }
                                ]
                            }
                        },
                        "Initialize_tagsEntities": {
                            "runAfter": {
                                "Initialize_commentsEntities": [
                                    "Succeeded"
                                ]
                            },
                            "type": "InitializeVariable",
                            "inputs": {
                                "variables": [
                                    {
                                        "name": "tagsEntities",
                                        "type": "array",
                                        "value": []
                                    }
                                ]
                            }
                        }
                    },
                    "outputs": {}
                },
                "parameters": {
                    "$connections": {
                        "value": {
                            "azuresentinel": {
                                "connectionId": "[resourceId('Microsoft.Web/connections', variables('AzureSentinelConnectionName'))]",
                                "connectionName": "[variables('AzureSentinelConnectionName')]",
                                "id": "[concat('/subscriptions/', subscription().subscriptionId, '/providers/Microsoft.Web/locations/', resourceGroup().location, '/managedApis/azuresentinel')]"
                            }
                        }
                    }
                }
            }
        }
    ]
}