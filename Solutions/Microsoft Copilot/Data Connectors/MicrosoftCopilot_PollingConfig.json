{
    "name": "CopilotPolling",
    "apiVersion": "2024-09-01",
    "type": "Microsoft.SecurityInsights/dataConnectors",
    "location": "{{location}}",
    "kind": "PurviewAudit",
    "properties": {
        "connectorDefinitionName": "MicrosoftCopilot",
        "TenantId": "{{tenantId}}",
        "SourceType": "CopilotGeneral",
        "DataTypes": {
            "Logs": {
                "state": "Enabled"
            }
        },
        "dcrConfig": {
            "dataCollectionEndpoint": "{{dataCollectionEndpoint}}",
            "dataCollectionRuleImmutableId": "{{dataCollectionRuleImmutableId}}",
            "streamName": "LLMACTIVITY_RESTAPI"
        },
        "request": {
            "RetryCount": 1
        }
    }
}