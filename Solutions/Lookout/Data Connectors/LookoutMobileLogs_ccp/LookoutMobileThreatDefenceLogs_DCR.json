[
  {
    "name": "LookoutMobileThreatDefenceDCR",
    "apiVersion": "2021-09-01-preview",
    "type": "Microsoft.Insights/dataCollectionRules",
    "location": "{{location}}",
    "properties": {
      "dataCollectionEndpointId": "{{dataCollectionEndpointId}}",
      "streamDeclarations": {
        "Custom-LookoutMobileThreatDefenceEventLogsV2_CL": {
          "columns": [
            { "name": "enterprise_guid", "type": "string" },
            { "name": "id", "type": "string" },
            { "name": "type", "type": "string" }
          ]
        }
      },
      "destinations": {
        "logAnalytics": [
          {
            "workspaceResourceId": "{{workspaceResourceId}}",
            "name": "clv2ws1"
          }
        ]
      },
      "dataFlows": [
        {
          "streams": [
            "Custom-LookoutMobileThreatDefenceEventLogsV2_CL"
          ],
          "destinations": [
            "clv2ws1"
          ],
          "transformKql": "source | extend EnterpriseGuid = tostring(enterprise_guid), Id = tostring(id), Type = tostring(type), TimeGenerated = now() | project Id, Type, EnterpriseGuid, TimeGenerated",
          "outputStream": "Custom-LookoutMobileThreatDefenceEventLogsV2_CL"
        }
      ]
    }
  }
]
