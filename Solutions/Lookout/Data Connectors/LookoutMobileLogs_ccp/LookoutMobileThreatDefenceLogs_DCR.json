[
  {
    "name": "LookoutMobileThreatDefenceDCR",
    "apiVersion": "2021-09-01-preview",
    "type": "Microsoft.Insights/dataCollectionRules",
    "location": "{{location}}",
    "properties": {
      "dataCollectionEndpointId": "{{dataCollectionEndpointId}}",
      "streamDeclarations": {
        "Custom-LookoutMobileThreatDefenceEventLogsV2_CL": {
          "columns": [
            { "name": "eventTime", "type": "datetime" },
            { "name": "id", "type": "string" },
            { "name": "type", "type": "string" },
            { "name": "changeType", "type": "string" }
          ]
        }
      },
      "destinations": {
        "logAnalytics": [
          {
            "workspaceResourceId": "{{workspaceResourceId}}",
            "name": "clv2ws1"
          }
        ]
      },
      "dataFlows": [
        {
          "streams": [
            "Custom-LookoutMobileThreatDefenceEventLogsV2_CL"
          ],
          "destinations": [
            "clv2ws1"
          ],
          "transformKql": "source | extend EventTime = todatetime(eventTime), EventId = tostring(id), EventType = tostring(type), ChangeType = tostring(changeType), TimeGenerated = now() | project EventTime, EventId, EventType, ChangeType, TimeGenerated",
          "outputStream": "Custom-LookoutMobileThreatDefenceEventLogsV2_CL"
        }
      ]
    }
  }
]
