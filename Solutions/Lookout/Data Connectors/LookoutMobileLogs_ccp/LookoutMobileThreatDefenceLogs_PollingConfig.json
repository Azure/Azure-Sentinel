[
    {
        "name": "LookoutMobileThreatDefensePoller",
        "apiVersion": "2022-12-01-preview",
        "type": "Microsoft.SecurityInsights/dataConnectors",
        "location": "{{location}}",
        "kind": "RestApiPoller",
        "properties": {
            "connectorDefinitionName": "LookoutMobileLogs_ConnectorDefinition",
            "dataType": "LookoutMobileThreatDefenceEventLogsV2_CL",
            "dcrConfig": {
                "dataCollectionEndpoint": "{{dataCollectionEndpoint}}",
                "dataCollectionRuleImmutableId": "{{dataCollectionRuleImmutableId}}",
                "streamName": "Custom-LookoutMobileThreatDefenceEventLogsV2_CL"
            },
            "auth": {
                "type": "APIKey",
                "ApiKey": "[[parameters('applicationKey')]",
                "ApiKeyName": "Authorization",
                "ApiKeyIdentifier": "Bearer"
            },
            "request": {
                "apiEndpoint": "https://api.lookout.com/oauth2/token",
                "httpMethod": "POST",
                "queryTimeFormat": "yyyy-MM-ddTHH:mm:ssZ",
                "rateLimitQPS": 10,
                "queryWindowInMin": 5,
                "retryCount": 3,
                "timeoutInSeconds": 60,
                "headers": {
                    "Accept": "application/json",
                    "Content-Type": "application/x-www-form-urlencoded"
                },
                "isPostPayloadJson": false,
                "queryParametersTemplate": {
                    "grant_type": "client_credentials"
                }
            },
            "response": {
                "eventsJsonPaths": [
                    "$"
                ],
                "format": "json"
            },
            "stepInfo": {
                "stepType": "Nested",
                "nextSteps": [
                    {
                        "stepId": "GetEvents",
                        "stepPlaceholdersParsingKql": "source | project token = parse_json(body) | project accessToken = tostring(token.access_token)"
                    }
                ]
            },
            "stepCollectorConfigs": {
                "GetEvents": {
                    "request": {
                        "httpMethod": "GET",
                        "apiEndpoint": "https://api.lookout.com/events?eventType=DEVICE,THREAT,AUDIT",
                        "headers": {
                            "Accept": "application/json",
                            "User-Agent": "LookoutMobileThreatDefence",
                            "Authorization": "Bearer {{accessToken}}"
                        },
                        "logResponseContent": true
                    },
                    "response": {
                        "format": "json",
                        "eventsJsonPaths": [
                            "$.events"
                        ]
                    },
                    "paging": {
                        "pagingType": "NextPageUrl",
                        "nextPageUrlJsonPath": "$.links[?(@.rel=='next')].href",
                        "nextPageUrlPrefix": "https://api.lookout.com"
                    }
                }
            }
        }
    }
]