{
    "name": "SAP-ETD-DCR",
    "apiVersion": "2022-06-01",
    "type": "Microsoft.Insights/dataCollectionRules",
    "location": "{{location}}",
    "properties": {
      "dataCollectionEndpointId": "{{dataCollectionEndpointId}}",
      "streamDeclarations": {
        "Custom-SAPETDAlerts_CL": {
          "columns": [
            {
              "name": "Version",
              "type": "string"
            },
            {
              "name": "AlertId",
              "type": "int"
            },
            {
              "name": "PatternName",
              "type": "string"
            },
            {
              "name": "PatternDescription",
              "type": "string"
            },
            {
              "name": "Status",
              "type": "string"
            },
            {
              "name": "CreationTimestamp",
              "type": "datetime"
            },
            {
              "name": "MinTimestamp",
              "type": "datetime"
            },
            {
              "name": "MaxTimestamp",
              "type": "datetime"
            },
            {
              "name": "Score",
              "type": "int"
            },
            {
              "name": "Threshold",
              "type": "int"
            },
            {
              "name": "Measure",
              "type": "int"
            },
            {
              "name": "TriggeringEvents",
              "type": "dynamic"
            }
          ]
        }
      },
      "destinations": {
        "logAnalytics": [
          {
            "workspaceResourceId": "{{workspaceResourceId}}",
            "name": "clv2ws1"
          }
        ]
      },
      "dataFlows": [
        {
          "streams": [
            "Custom-SAPETDAlerts_CL"
          ],
          "destinations": [
            "clv2ws1"
          ],
          "transformKql": "source| extend TimeGenerated = now()",
          "outputStream": "Custom-SAPETDAlerts_CL"
        }
      ]
    }
}