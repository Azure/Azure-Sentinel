[
    {
        "name": "GCPDNSDCR",
        "apiVersion": "2021-09-01-preview",
        "type": "Microsoft.Insights/dataCollectionRules",
        "location": "{{location}}",
        "properties": {
            "dataCollectionEndpointId": "{{dataCollectionEndpointId}}",
            "streamDeclarations": {
                "Custom-GCPDNS": {
                    "columns": [
                        {
                            "name": "insertId",
                            "type": "string"
                        },
                        {
                            "name": "logName",
                            "type": "string"
                        },
                        {
                            "name": "principalEmail",
                            "type": "string"
                        },
                        {
                            "name": "methodName",
                            "type": "string"
                        },
                        {
                            "name": "serviceName",
                            "type": "string"
                        },
                        {
                            "name": "receiveTimestamp",
                            "type": "string"
                        },
                        {
                            "name": "project_id",
                            "type": "string"
                        },
                        {
                            "name": "zone_name",
                            "type": "string"
                        },
                        {
                            "name": "severity",
                            "type": "string"
                        },
                        {
                            "name": "timestamp",
                            "type": "string"
                        }
                    ]
                }
            },
            "destinations": {
                "logAnalytics": [
                    {
                        "workspaceResourceId": "{{workspaceResourceId}}",
                        "name": "clv2ws1"
                    }
                ]
            },
            "dataFlows": [
                {
                    "streams": [
                        "Custom-GCPDNS"
                    ],
                    "destinations": [
                        "clv2ws1"
                    ],
                    "transformKql": "source | extend principalEmail = protoPayload.authenticationInfo.principalEmail, methodName = protoPayload.methodName, serviceName = protoPayload.serviceName, project_id = resource.labels.project_id, zone_name = resource.labels.zone_name, TimeGenerated = now()",
                    "outputStream": "Custom-GCPDNSlogs_CL"
                }
            ]
        }
    }
]