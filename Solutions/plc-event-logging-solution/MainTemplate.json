{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "solutionName": {
      "type": "string",
      "metadata": {
        "description": "The name of your solution, used for naming conventions."
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "The location where the resources for your solution will be deployed."
      }
    }
  },
  "variables": {
    "dceTemplateUrl": "[uri(deployment().properties.templateLink.uri, 'PLCSentinel-DCE.json')]",
    "dcrTemplateUrl": "[uri(deployment().properties.templateLink.uri, 'PLCSentinel-DCR.json')]",
    "workbookTemplateUrl": "[uri(deployment().properties.templateLink.uri, 'PLCEventLoggingWorkbook.json')]"
  },
  "resources": [
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2021-04-01",
      "name": "deploy-dce-template",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('dceTemplateUrl')]",
          "contentVersion": "1.0.0.0"
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2021-04-01",
      "name": "deploy-dcr-template",
      "dependsOn": [
        "deploy-dce-template"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('dcrTemplateUrl')]",
          "contentVersion": "1.0.0.0"
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2021-04-01",
      "name": "deploy-workbook-template",
      "dependsOn": [
        "deploy-dcr-template"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('workbookTemplateUrl')]",
          "contentVersion": "1.0.0.0"
        }
      }
    }
  ],
  "outputs": {}
}
