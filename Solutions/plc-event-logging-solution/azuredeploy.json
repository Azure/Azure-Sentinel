{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "workspaceName": {
      "type": "string",
      "metadata": { "description": "Name of the Log Analytics workspace" }
    }
  },
  "variables": {
    "_uiConfigId1": "[guid(subscription().id, 'PLCEventLoggingWorkbook')]"
  },
  "resources": [
    {
      "type": "Microsoft.OperationalInsights/workspaces/providers/workbooks",
      "apiVersion": "2021-06-01",
      "name": "[concat(parameters('workspaceName'), '/Microsoft.Portal/workbooks/', variables('_uiConfigId1'))]",
      "location": "[resourceGroup().location]",
      "properties": {
        "displayName": "PLC Event Logging Workbook",
        "category": "Sentinel",
        "sourceId": "[resourceId('Microsoft.OperationalInsights/workspaces', parameters('workspaceName'))]",
        "serializedData": "[loadFile('Workbooks/PLCEventLoggingWorkbook.json')]",
        "contentProductId": "[variables('_uiConfigId1')]"
      }
    }
  ],
  "outputs": {}
}
