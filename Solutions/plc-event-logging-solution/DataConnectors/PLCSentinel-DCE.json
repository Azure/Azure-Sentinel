{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "dataCollectionEndpoints_dce_name": {
      "type": "string",
      "defaultValue": "PLCSentinel-dce",
      "metadata": {
        "description": "Name of the Data Collection Endpoint."
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location of the Data Collection Endpoint."
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.Insights/dataCollectionEndpoints",
      "apiVersion": "2023-03-11",
      "kind": "AzureMonitoring",
      "name": "[parameters('dataCollectionEndpoints_dce_name')]",
      "location": "[parameters('location')]",
      "properties": {
        "configurationAccess": {},
        "logsIngestion": {},
        "metricsIngestion": {},
        "networkAcls": {
          "publicNetworkAccess": "Enabled"
        }
      }
    }
  ],
  "outputs": {
    "dceId": {
      "type": "string",
      "value": "[resourceId('Microsoft.Insights/dataCollectionEndpoints', parameters('dataCollectionEndpoints_dce_name'))]"
    }
  }
}
