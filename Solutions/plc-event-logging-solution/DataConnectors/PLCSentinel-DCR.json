{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string",
      "metadata": {
        "description": "The location where the resources for your solution will be deployed."
      }
    },
    "dataCollectionRules_dcr_name": {
      "type": "string",
      "metadata": {
        "description": "The name of the Data Collection Rule."
      }
    },
    "workspaceId": {
      "type": "string",
      "metadata": {
        "description": "The Resource ID of the target Log Analytics Workspace (e.g., /subscriptions/.../workspaces/...). Passed from the main template."
      }
    },
    "dceResourceId": {
      "type": "string",
      "metadata": {
        "description": "The Resource ID of the Data Collection Endpoint. Passed from the main template."
      }
    }
  },
  "variables": {
    "logAnalyticsDestinationName": "logAnalyticsDestination"
  },
  "resources": [
    {
      "type": "Microsoft.Insights/dataCollectionRules",
      "apiVersion": "2021-09-01",
      "name": "[parameters('dataCollectionRules_dcr_name')]",
      "location": "[parameters('location')]",
      "properties": {
        "dataCollectionEndpointId": "[parameters('dceResourceId')]",
        "streamDeclarations": {
          "Custom-PLCEventLogging_CL": {
            "columns": [
              {
                "name": "ID",
                "type": "string"
              },
              {
                "name": "PerformedBy",
                "type": "string"
              },
              {
                "name": "TimeGenerated",
                "type": "datetime"
              },
              {
                "name": "EventName",
                "type": "string"
              },
              {
                "name": "EventDescription",
                "type": "string"
              },
              {
                "name": "EventType",
                "type": "int"
              },
              {
                "name": "EventMessage",
                "type": "string"
              },
              {
                "name": "Severity",
                "type": "int"
              },
              {
                "name": "OccurredOn",
                "type": "datetime"
              },
              {
                "name": "SystemName",
                "type": "string"
              }
            ]
          }
        },
        "dataSources": {},
        "destinations": {
          "logAnalytics": [
            {
              "workspaceResourceId": "[parameters('workspaceId')]",
              "name": "[variables('logAnalyticsDestinationName')]"
            }
          ]
        },
        "dataFlows": [
          {
            "streams": [ "Custom-PLCEventLogging_CL" ],
            "destinations": [ "[variables('logAnalyticsDestinationName')]" ],
            "transformKql": "source",
            "outputStream": "Custom-PLCEventLogging_CL"
          }
        ]
      }
    }
  ],
  "outputs": {
    "dcrImmutableId": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.Insights/dataCollectionRules', parameters('dataCollectionRules_dcr_name')), '2021-09-01').immutableId]"
    }
  }
}
