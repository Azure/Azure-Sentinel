{
  "$schema": "https://schema.management.azure.com/schemas/solution/authoring/2021-02-01/createUiDefinition.json#",
  "handler": "Microsoft.Azure.Sentinel.Solutions.Content.CreateUiDefinition",
  "metadata": {
    "version": "1.0.0",
    "requiredDependencies": []
  },
  "parameters": {
    "basics": [
      {
        "name": "location",
        "type": "Microsoft.Common.Locations",
        "label": "Location",
        "tooltip": "The location where the resources for your solution will be deployed.",
        "defaultValue": "[resourceGroup().location]",
        "visible": true
      },
      {
        "name": "solutionName",
        "type": "Microsoft.Common.TextBox",
        "label": "Solution Name",
        "tooltip": "A unique name for your solution deployment.",
        "defaultValue": "[uniqueString(resourceGroup().id)]"
      }
    ],
    "outputs": {
      "location": "[steps('basics').location]",
      "solutionName": "[steps('basics').solutionName]"
    }
  }
}
