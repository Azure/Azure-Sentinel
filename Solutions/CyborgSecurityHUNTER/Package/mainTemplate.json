                {
                  "parameters": {
                    "fillWith": [
                      "workspaceName"
                    ],
                    "label": "ResourceGroupName & WorkspaceName",
                    "value": "{0}"
                  },
                  "type": "CopyableLabel"
                },
                {
                  "parameters": {
                    "fillWith": [
                      "WorkspaceId"
                    ],
                    "label": "WorkspaceID",
                    "value": "{0}"
                  },
                  "type": "CopyableLabel"
                }
              ]
