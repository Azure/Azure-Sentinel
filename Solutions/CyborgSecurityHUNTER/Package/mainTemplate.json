                  "sourceId": "[variables('_solutionId')]"
                },
                "author": {
                  "name": "Mike Mitchell",
                  "email": "[variables('_email')]"
                },
                "support": {
                  "name": "Cyborg Security",
                  "email": "info@cyborgsecurity.com",
                  "tier": "HUNTER",
                  "link": "https://hunter.cyborgsecurity.io/customer-support"
                }
              }
            }
          ]
        },
