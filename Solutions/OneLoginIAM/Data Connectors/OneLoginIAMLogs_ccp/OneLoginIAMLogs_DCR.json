[
    {
        "name": "OneLoginIAMDCR",
        "apiVersion": "2021-09-01-preview",
        "type": "Microsoft.Insights/dataCollectionRules",
        "location": "{{location}}",
        "properties": {
            "dataCollectionEndpointId": "{{dataCollectionEndpointId}}",
            "streamDeclarations": {
                "Custom-OneLoginEventsV2_CL": {
                    "columns": [
                        {
                            "name": "id",
                            "type": "real"
                        },
                        {
                            "name": "app_name",
                            "type": "string"
                        },
                        {
                            "name": "app_id",
                            "type": "real"
                        },
                        {
                            "name": "role_name",
                            "type": "string"
                        },
                        {
                            "name": "role_id",
                            "type": "real"
                        },
                        {
                            "name": "policy_name",
                            "type": "string"
                        },
                        {
                            "name": "policy_id",
                            "type": "real"
                        },
                        {
                            "name": "policy_type",
                            "type": "string"
                        },
                        {
                            "name": "user_id",
                            "type": "real"
                        },
                        {
                            "name": "user_name",
                            "type": "string"
                        },
                        {
                            "name": "actor_system",
                            "type": "string"
                        },
                        {
                            "name": "custom_message",
                            "type": "string"
                        },
                        {
                            "name": "account_id",
                            "type": "real"
                        },
                        {
                            "name": "ipaddr",
                            "type": "string"
                        },
                        {
                            "name": "actor_user_name",
                            "type": "string"
                        },
                        {
                            "name": "actor_user_id",
                            "type": "real"
                        },
                        {
                            "name": "notes",
                            "type": "string"
                        },
                        {
                            "name": "event_type_id",
                            "type": "real"
                        },
                        {
                            "name": "created_at",
                            "type": "string"
                        }
                    ]
                },
                "Custom-OneLoginUsersV2_CL": {
                    "columns": [
                        {
                            "name": "username",
                            "type": "string"
                        },
                        {
                            "name": "firstname",
                            "type": "string"
                        },
                        {
                            "name": "email",
                            "type": "string"
                        },
                        {
                            "name": "lastname",
                            "type": "string"
                        },
                        {
                            "name": "department",
                            "type": "string"
                        },
                        {
                            "name": "openid_name",
                            "type": "string"
                        },
                        {
                            "name": "title",
                            "type": "string"
                        },
                        {
                            "name": "id",
                            "type": "real"
                        }
                    ]
                }
            },
            "destinations": {
                "logAnalytics": [
                    {
                        "workspaceResourceId": "{{workspaceResourceId}}",
                        "name": "clv2ws1"
                    }
                ]
            },
            "dataFlows": [
                {
                    "streams": [
                        "Custom-OneLoginEventsV2_CL"
                    ],
                    "destinations": [
                        "clv2ws1"
                    ],
                    "transformKql": "source | extend TimeGenerated = now() | project-rename EventId = id, AppName = app_name, AppId = app_id, RoleName = role_name, RoleId = role_id, PolicyName = policy_name, PolicyId = policy_id, PolicyType = policy_type, UserId = user_id, UserName = user_name, ActorSystem = actor_system, CustomMessage = custom_message, AccountId = account_id, Ipaddr = ipaddr, ActorUserName = actor_user_name, ActorUserId = actor_user_id, Notes = notes, EventTypeId = event_type_id, EventTimestamp = created_at",
                    "outputStream": "Custom-OneLoginEventsV2_CL"
                },
                {
                    "streams": [
                        "Custom-OneLoginUsersV2_CL"
                    ],
                    "destinations": [
                        "clv2ws1"
                    ],
                    "transformKql": "source | extend TimeGenerated = now() | project-rename UserAttributesUsername = username, UserAttributesFirstname = firstname, UserAttributesEmail = email, UserAttributesLastname = lastname, UserAttributesDepartment = department, UserAttributesOpenidName = openid_name, UserAttributesTitle = ['title'], UserAttributesId = id",
                    "outputStream": "Custom-OneLoginUsersV2_CL"
                }
            ]
        }
    }
]