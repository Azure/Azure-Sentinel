      "connectorDefinitionName": "CrowdStrikeAPICCPDefinition",
      "dataType": "CrowdStrikeDetections",
      "dcrConfig": {
        "streamName": "SENTINEL_CROWDSTRIKEDETECTIONS",
        "dataCollectionEndpoint": "{{dataCollectionEndpoint}}",
