[
    {
        "name": "ZoomCloudRecording",
        "apiVersion": "2022-12-01-preview",
        "type": "Microsoft.SecurityInsights/dataConnectors",
        "kind": "RestApiPoller",
        "properties": {
            "connectorDefinitionName": "ZoomReportsUsingRESTAPI",
            "dataType": "Zoom_CloudRecordings_CL",
            "dcrConfig": {
                "dataCollectionEndpoint": "{{dataCollectionEndpoint}}",
                "dataCollectionRuleImmutableId": "{{dataCollectionRuleImmutableId}}",
                "streamName": "Custom-Zoom_CloudRecordings"
            },
            "auth": {
                "type": "OAuth2",
                "IsCredentialsInHeaders": "true",
                "ClientSecret": "[[parameters('clientSecret')]",
                "ClientId": "[[parameters('clientId')]",
                "GrantType": "client_credentials",
                "TokenEndpoint": "[[concat('https://zoom.us/oauth/token?grant_type=account_credentials&account_id=', parameters('accountId'))]",
                "tokenEndpointHeaders": {
                    "Accept": "application/json",
                    "Content-Type": "application/x-www-form-urlencoded"
                },
                "scope": "report:read:admin"
            },
            "request": {
                "apiEndpoint": "https://api.zoom.us/v2/report/cloud_recording",
                "rateLimitQPS": 10,
                "queryWindowInMin": 5,
                "httpMethod": "GET",
                "retryCount": 3,
                "timeoutInSeconds": 60,
                "headers": {
                    "Accept": "application/json"
                },
                "queryTimeFormat": "yyyy-MM-dd",
                "queryParameters": {
                    "from": "{_QueryWindowStartDay}",
                    "to": "{_QueryWindowEndDay}"
                }
            },
            "response": {
                "eventsJsonPaths": [
                    "$.cloud_recording_storage"
                ]
            },
            "paging": {
                "pagingType": "NextPageToken",
                "PageSizeParameterName": "page_size",
                "pageSize": 100,
                "nextPageTokenJsonPath": "$.next_page_token",
                "nextPageParaName": "next_page_token"
            }
        }
    }
]