[
    {
        "name": "ZoomReportDCR",
        "apiVersion": "2021-09-01-preview",
        "type": "Microsoft.Insights/dataCollectionRules",
        "location": "{{location}}",
        "properties": {
            "dataCollectionEndpointId": "{{dataCollectionEndpoint}}",
            "streamDeclarations": {
                "Custom-Zoom_CloudRecordings": {
                    "columns": [
                        {
                            "name": "['date']",
                            "type": "datetime"
                        },
                        {
                            "name": "free_usage",
                            "type": "string"
                        },
                        {
                            "name": "plan_usage",
                            "type": "string"
                        },
                        {
                            "name": "usage",
                            "type": "string"
                        }
                    ]
                }
            },
            "destinations": {
                "logAnalytics": [
                    {
                        "workspaceResourceId": "{{workspaceResourceId}}",
                        "name": "clv2ws1"
                    }
                ]
            },
            "dataFlows": [
                {
                    "streams": [
                        "Custom-Zoom_CloudRecordings"
                    ],
                    "destinations": [
                        "clv2ws1"
                    ],
                    "transformKql": "source | extend TimeGenerated= now() | extend usageDate = ['date'] | project usageDate, free_usage, plan_usage, usage, TimeGenerated",
                    "outputStream": "Custom-Zoom_CloudRecordings_CL"
                }
            ]
        }
    }
]