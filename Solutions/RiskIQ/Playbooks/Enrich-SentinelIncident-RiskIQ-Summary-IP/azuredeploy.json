{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "metadata": {
        "comments": "This playbook uses the RiskIQ Intelligence connector to automatically enrich incidents generated by Sentinel.",
        "author": "Brandon Dixon, RiskIQ"
    },
    "parameters": {
        "PlaybookName": {
            "defaultValue": "Summary-IP-Enrichment",
            "type": "string"
        },
        "UserName": {
            "defaultValue": "<username>@<domain>",
            "type": "string"
        }
    },
    "variables": {
        "AzureSentinelConnectionName": "[concat('azuresentinel-', parameters('PlaybookName'))]",
        "RiskIQConnectionName": "[concat('riskiqintelligence-', parameters('PlaybookName'))]"
    },
    "resources": [{
        "type": "Microsoft.Web/connections",
        "apiVersion": "2016-06-01",
        "name": "[variables('RiskIQConnectionName')]",
        "location": "[resourceGroup().location]",
        "properties": {
            "customParameterValues": {},
            "api": {
                "id": "[concat('/subscriptions/', subscription().subscriptionId, '/providers/Microsoft.Web/locations/', resourceGroup().location, '/managedApis/riskiqintelligence')]"
            }
        }
    }, {
        "type": "Microsoft.Web/connections",
        "apiVersion": "2016-06-01",
        "name": "[variables('AzureSentinelConnectionName')]",
        "location": "[resourceGroup().location]",
        "properties": {
            "customParameterValues": {},
            "api": {
                "id": "[concat('/subscriptions/', subscription().subscriptionId, '/providers/Microsoft.Web/locations/', resourceGroup().location, '/managedApis/azuresentinel')]"
            }
        }
    }, {
        "type": "Microsoft.Logic/workflows",
        "apiVersion": "2019-05-01",
        "name": "[parameters('PlaybookName')]",
        "location": "[resourceGroup().location]",
        "tags": {
            "LogicAppsCategory": "security"
        },
        "dependsOn": [
            "[resourceId('Microsoft.Web/connections', variables('RiskIQConnectionName'))]",
            "[resourceId('Microsoft.Web/connections', variables('AzureSentinelConnectionName'))]"
        ],
        "properties": {
            "state": "Enabled",
            "definition": {
                "$schema": "https://schema.management.azure.com/providers/Microsoft.Logic/schemas/2016-06-01/workflowdefinition.json#",
                "contentVersion": "1.0.0.0",
                "parameters": {
                    "$connections": {
                        "defaultValue": {},
                        "type": "Object"
                    }
                },
                "triggers": {
                    "When_a_response_to_an_Azure_Sentinel_alert_is_triggered": {
                        "type": "ApiConnectionWebhook",
                        "inputs": {
                            "body": {
                                "callback_url": "@{listCallbackUrl()}"
                            },
                            "host": {
                                "connection": {
                                    "name": "@parameters('$connections')['azuresentinel']['connectionId']"
                                }
                            },
                            "path": "/subscribe"
                        }
                    }
                },
                "actions": {
                    "Alert_-_Get_IPs": {
                        "inputs": {
                            "body": "@triggerBody()?['Entities']",
                            "host": {
                                "connection": {
                                    "name": "@parameters('$connections')['azuresentinel']['connectionId']"
                                }
                            },
                            "method": "post",
                            "path": "/entities/ip"
                        },
                        "runAfter": {},
                        "type": "ApiConnection"
                    },
                    "For_each_ip_child_pairs": {
                        "actions": {
                            "Add_comment_to_incident_(V2)_225": {
                                "inputs": {
                                    "body": {
                                        "Value": "Associated Children Host Pairs for @{items('For_each_ip_child_pairs')?['Address']}: @{body('Get_children_host_pairs_of_ip')?['totalElements']}\nView additional details at https://community.riskiq.com/@{items('For_each_ip_child_pairs')?['Address']}/hostpairs"
                                    },
                                    "host": {
                                        "connection": {
                                            "name": "@parameters('$connections')['azuresentinel']['connectionId']"
                                        }
                                    },
                                    "method": "put",
                                    "path": "/Comment/@{encodeURIComponent(triggerBody()?['WorkspaceSubscriptionId'])}/@{encodeURIComponent(triggerBody()?['WorkspaceId'])}/@{encodeURIComponent(triggerBody()?['WorkspaceResourceGroup'])}/@{encodeURIComponent('Alert')}/@{encodeURIComponent(triggerBody()?['SystemAlertId'])}"
                                },
                                "runAfter": {
                                    "Get_children_host_pairs_of_ip": [
                                        "Succeeded"
                                    ]
                                },
                                "type": "ApiConnection"
                            },
                            "Get_children_host_pairs_of_ip": {
                                "inputs": {
                                    "host": {
                                        "connection": {
                                            "name": "@parameters('$connections')['riskiqintelligence']['connectionId']"
                                        }
                                    },
                                    "method": "get",
                                    "path": "/v0/hostattributes/hosts/trackers/children/@{encodeURIComponent(items('For_each_ip_child_pairs')?['Address'])}"
                                },
                                "runAfter": {},
                                "type": "ApiConnection"
                            }
                        },
                        "foreach": "@body('Alert_-_Get_IPs')?['IPs']",
                        "runAfter": {
                            "Alert_-_Get_IPs": [
                                "Succeeded"
                            ]
                        },
                        "type": "Foreach"
                    },
                    "For_each_ip_cookies": {
                        "actions": {
                            "Add_comment_to_incident_(V2)_14": {
                                "inputs": {
                                    "body": {
                                        "Value": "Associated Cookies for @{items('For_each_ip_cookies')?['Address']}: @{body('Get_cookies_associated_with_ip')?['totalElements']}\nView additional details at https://community.riskiq.com/search/@{items('For_each_ip_cookies')?['Address']}/cookies"
                                    },
                                    "host": {
                                        "connection": {
                                            "name": "@parameters('$connections')['azuresentinel']['connectionId']"
                                        }
                                    },
                                    "method": "put",
                                    "path": "/Comment/@{encodeURIComponent(triggerBody()?['WorkspaceSubscriptionId'])}/@{encodeURIComponent(triggerBody()?['WorkspaceId'])}/@{encodeURIComponent(triggerBody()?['WorkspaceResourceGroup'])}/@{encodeURIComponent('Alert')}/@{encodeURIComponent(triggerBody()?['SystemAlertId'])}"
                                },
                                "runAfter": {
                                    "Get_cookies_associated_with_ip": [
                                        "Succeeded"
                                    ]
                                },
                                "type": "ApiConnection"
                            },
                            "Get_cookies_associated_with_ip": {
                                "inputs": {
                                    "host": {
                                        "connection": {
                                            "name": "@parameters('$connections')['riskiqintelligence']['connectionId']"
                                        }
                                    },
                                    "method": "get",
                                    "path": "/v0/hostattributes/addresses/cookies/@{encodeURIComponent(items('For_each_ip_cookies')?['Address'])}"
                                },
                                "runAfter": {},
                                "type": "ApiConnection"
                            }
                        },
                        "foreach": "@body('Alert_-_Get_IPs')?['IPs']",
                        "runAfter": {
                            "Alert_-_Get_IPs": [
                                "Succeeded"
                            ]
                        },
                        "type": "Foreach"
                    },
                    "For_each_ip_parent_pairs": {
                        "actions": {
                            "Add_comment_to_incident_(V2)_16": {
                                "inputs": {
                                    "body": {
                                        "Value": "Associated Parent Host Pairs for @{items('For_each_ip_parent_pairs')?['Address']}: @{body('Get_parent_host_pairs_of_ip')?['totalElements']}\nView additional details at https://community.riskiq.com/search/@{items('For_each_ip_parent_pairs')?['Address']}/hostpairs"
                                    },
                                    "host": {
                                        "connection": {
                                            "name": "@parameters('$connections')['azuresentinel']['connectionId']"
                                        }
                                    },
                                    "method": "put",
                                    "path": "/Comment/@{encodeURIComponent(triggerBody()?['WorkspaceSubscriptionId'])}/@{encodeURIComponent(triggerBody()?['WorkspaceId'])}/@{encodeURIComponent(triggerBody()?['WorkspaceResourceGroup'])}/@{encodeURIComponent('Alert')}/@{encodeURIComponent(triggerBody()?['SystemAlertId'])}"
                                },
                                "runAfter": {
                                    "Get_parent_host_pairs_of_ip": [
                                        "Succeeded"
                                    ]
                                },
                                "type": "ApiConnection"
                            },
                            "Get_parent_host_pairs_of_ip": {
                                "inputs": {
                                    "host": {
                                        "connection": {
                                            "name": "@parameters('$connections')['riskiqintelligence']['connectionId']"
                                        }
                                    },
                                    "method": "get",
                                    "path": "/v0/hostattributes/hosts/trackers/parents/@{encodeURIComponent(items('For_each_ip_parent_pairs')?['Address'])}"
                                },
                                "runAfter": {},
                                "type": "ApiConnection"
                            }
                        },
                        "foreach": "@body('Alert_-_Get_IPs')?['IPs']",
                        "runAfter": {
                            "Alert_-_Get_IPs": [
                                "Succeeded"
                            ]
                        },
                        "type": "Foreach"
                    },
                    "For_each_ip_pdns": {
                        "actions": {
                            "Add_comment_to_incident_(V2)_111": {
                                "inputs": {
                                    "body": {
                                        "Value": "Associated Passive DNS for @{items('For_each_ip_pdns')?['Address']}: @{body('Passive_DNS_results_by_ip')?['recordCount']}\nView additional details at https://community.riskiq.com/search/@{items('For_each_ip_pdns')?['Address']}/resolutions"
                                    },
                                    "host": {
                                        "connection": {
                                            "name": "@parameters('$connections')['azuresentinel']['connectionId']"
                                        }
                                    },
                                    "method": "put",
                                    "path": "/Comment/@{encodeURIComponent(triggerBody()?['WorkspaceSubscriptionId'])}/@{encodeURIComponent(triggerBody()?['WorkspaceId'])}/@{encodeURIComponent(triggerBody()?['WorkspaceResourceGroup'])}/@{encodeURIComponent('Alert')}/@{encodeURIComponent(triggerBody()?['SystemAlertId'])}"
                                },
                                "runAfter": {
                                    "Passive_DNS_results_by_ip": [
                                        "Succeeded"
                                    ]
                                },
                                "type": "ApiConnection"
                            },
                            "Passive_DNS_results_by_ip": {
                                "inputs": {
                                    "host": {
                                        "connection": {
                                            "name": "@parameters('$connections')['riskiqintelligence']['connectionId']"
                                        }
                                    },
                                    "method": "get",
                                    "path": "/v0/pdns/data/ip",
                                    "queries": {
                                        "ip": "@items('For_each_ip_pdns')?['Address']"
                                    }
                                },
                                "runAfter": {},
                                "type": "ApiConnection"
                            }
                        },
                        "foreach": "@body('Alert_-_Get_IPs')?['IPs']",
                        "runAfter": {
                            "Alert_-_Get_IPs": [
                                "Succeeded"
                            ]
                        },
                        "type": "Foreach"
                    },
                    "For_each_ip_ssl": {
                        "actions": {
                            "Add_comment_to_incident_(V2)_18": {
                                "inputs": {
                                    "body": {
                                        "Value": "Associated SSL Certificates for @{items('For_each_ip_ssl')?['Address']}: @{body('Get_SSL_certificates_by_ip')?['totalElements']}\nView additional details at https://community.riskiq.com/search/@{items('For_each_ip_ssl')?['Address']}/domaincertificates"
                                    },
                                    "host": {
                                        "connection": {
                                            "name": "@parameters('$connections')['azuresentinel']['connectionId']"
                                        }
                                    },
                                    "method": "put",
                                    "path": "/Comment/@{encodeURIComponent(triggerBody()?['WorkspaceSubscriptionId'])}/@{encodeURIComponent(triggerBody()?['WorkspaceId'])}/@{encodeURIComponent(triggerBody()?['WorkspaceResourceGroup'])}/@{encodeURIComponent('Alert')}/@{encodeURIComponent(triggerBody()?['SystemAlertId'])}"
                                },
                                "runAfter": {
                                    "Get_SSL_certificates_by_ip": [
                                        "Succeeded"
                                    ]
                                },
                                "type": "ApiConnection"
                            },
                            "Get_SSL_certificates_by_ip": {
                                "inputs": {
                                    "host": {
                                        "connection": {
                                            "name": "@parameters('$connections')['riskiqintelligence']['connectionId']"
                                        }
                                    },
                                    "method": "get",
                                    "path": "/v1/ssl/cert/name",
                                    "queries": {
                                        "name": "@items('For_each_ip_ssl')?['Address']"
                                    }
                                },
                                "runAfter": {},
                                "type": "ApiConnection"
                            }
                        },
                        "foreach": "@body('Alert_-_Get_IPs')?['IPs']",
                        "runAfter": {
                            "Alert_-_Get_IPs": [
                                "Succeeded"
                            ]
                        },
                        "type": "Foreach"
                    },
                    "For_each_ip_trackers": {
                        "actions": {
                            "Add_comment_to_incident_(V2)_12": {
                                "inputs": {
                                    "body": {
                                        "Value": "Associated Trackers for @{items('For_each_ip_trackers')?['Address']}: @{body('Get_trackers_for_a_ip')?['totalElements']}\nView additional details at https://community.riskiq.com/search/@{items('For_each_ip_trackers')?['Address']}/trackers"
                                    },
                                    "host": {
                                        "connection": {
                                            "name": "@parameters('$connections')['azuresentinel']['connectionId']"
                                        }
                                    },
                                    "method": "put",
                                    "path": "/Comment/@{encodeURIComponent(triggerBody()?['WorkspaceSubscriptionId'])}/@{encodeURIComponent(triggerBody()?['WorkspaceId'])}/@{encodeURIComponent(triggerBody()?['WorkspaceResourceGroup'])}/@{encodeURIComponent('Alert')}/@{encodeURIComponent(triggerBody()?['SystemAlertId'])}"
                                },
                                "runAfter": {
                                    "Get_trackers_for_a_ip": [
                                        "Succeeded"
                                    ]
                                },
                                "type": "ApiConnection"
                            },
                            "Get_trackers_for_a_ip": {
                                "inputs": {
                                    "host": {
                                        "connection": {
                                            "name": "@parameters('$connections')['riskiqintelligence']['connectionId']"
                                        }
                                    },
                                    "method": "get",
                                    "path": "/v0/hostattributes/addresses/trackers/@{encodeURIComponent(items('For_each_ip_trackers')?['Address'])}"
                                },
                                "runAfter": {},
                                "type": "ApiConnection"
                            }
                        },
                        "foreach": "@body('Alert_-_Get_IPs')?['IPs']",
                        "runAfter": {
                            "Alert_-_Get_IPs": [
                                "Succeeded"
                            ]
                        },
                        "type": "Foreach"
                    },
                    "For_each_ip_whois": {
                        "actions": {
                            "Add_comment_to_incident_(V2)_17": {
                                "inputs": {
                                    "body": {
                                        "Value": "Associated WHOIS for @{items('For_each_ip_whois')?['Address']}: @{body('Get_the_current_WHOIS_for_a_ip')?['results']}\nView additional details at https://community.riskiq.com/search/@{items('For_each_ip_whois')?['Address']}/whois"
                                    },
                                    "host": {
                                        "connection": {
                                            "name": "@parameters('$connections')['azuresentinel']['connectionId']"
                                        }
                                    },
                                    "method": "put",
                                    "path": "/Comment/@{encodeURIComponent(triggerBody()?['WorkspaceSubscriptionId'])}/@{encodeURIComponent(triggerBody()?['WorkspaceId'])}/@{encodeURIComponent(triggerBody()?['WorkspaceResourceGroup'])}/@{encodeURIComponent('Alert')}/@{encodeURIComponent(triggerBody()?['SystemAlertId'])}"
                                },
                                "runAfter": {
                                    "Get_the_current_WHOIS_for_a_ip": [
                                        "Succeeded"
                                    ]
                                },
                                "type": "ApiConnection"
                            },
                            "Get_the_current_WHOIS_for_a_ip": {
                                "inputs": {
                                    "host": {
                                        "connection": {
                                            "name": "@parameters('$connections')['riskiqintelligence']['connectionId']"
                                        }
                                    },
                                    "method": "get",
                                    "path": "/v0/whois/address",
                                    "queries": {
                                        "address": "@{items('For_each_ip_whois')?['Address']}"
                                    }
                                },
                                "runAfter": {},
                                "type": "ApiConnection"
                            }
                        },
                        "foreach": "@body('Alert_-_Get_IPs')?['IPs']",
                        "runAfter": {
                            "Alert_-_Get_IPs": [
                                "Succeeded"
                            ]
                        },
                        "type": "Foreach"
                    }
                },
                "outputs": {}
            },
            "parameters": {
                "$connections": {
                    "value": {
                        "azuresentinel": {
                            "connectionId": "[resourceId('Microsoft.Web/connections', variables('AzureSentinelConnectionName'))]",
                            "connectionName": "[variables('AzureSentinelConnectionName')]",
                            "id": "[concat('/subscriptions/', subscription().subscriptionId, '/providers/Microsoft.Web/locations/', resourceGroup().location, '/managedApis/azuresentinel')]"
                        },
                        "riskiqintelligence": {
                            "connectionId": "[resourceId('Microsoft.Web/connections', variables('RiskIQConnectionName'))]",
                            "connectionName": "[variables('RiskIQConnectionName')]",
                            "id": "[concat('/subscriptions/', subscription().subscriptionId, '/providers/Microsoft.Web/locations/', resourceGroup().location, '/managedApis/riskiqintelligence')]"
                        }
                    }
                }
            }
        }
    }]
}
