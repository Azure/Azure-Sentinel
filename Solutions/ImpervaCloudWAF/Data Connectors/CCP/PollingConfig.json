[
    {
        "type": "Microsoft.SecurityInsights/dataConnectors",
        "apiVersion": "2025-03-01",
        "name": "ImpervaCloudWAFLogsCCPDefinition",
        "kind": "RestApiPoller",
        "properties": {
            "connectorDefinitionName": "ImpervaCloudWAFLogsCCPDefinition",
            "dataType": "ImpervaCloudWAFV2_CL",
            "auth": {
                "type": "Basic",
                "userName": "[[parameters('APIId')]",
                "password": "[[parameters('APIKey')]"
            },
            "request": {
                "apiEndpoint": "{{apiServerUrl}}/logs.index",
                "httpMethod": "GET",
                "QueryWindowInMin": 10,
                "headers": {
                    "User-Agent": "Scuba"
                }
            },
            "response": {
                "eventsJsonPaths": [
                    "$"
                ],
                "IsGzipCompressed": true,
                "format": "cef"
            },
            "dcrConfig": {
                "streamName": "Custom-ImpervaCloudWAF",
                "dataCollectionEndpoint": "{{dataCollectionEndpoint}}",
                "dataCollectionRuleImmutableId": "{{dataCollectionRuleImmutableId}}"
            }
        }
    }
]