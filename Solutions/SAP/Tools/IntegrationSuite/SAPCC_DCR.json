[
  {
    "name": "SAPCC-DCR",
    "apiVersion": "2021-09-01-preview",
    "type": "Microsoft.Insights/dataCollectionRules",
    "location": "{{location}}",
    "properties": {
      "dataCollectionEndpointId": "{{dataCollectionEndpointId}}",
      "streamDeclarations": {},
      "destinations": {
        "logAnalytics": [
          {
            "workspaceResourceId": "{{workspaceResourceId}}",
            "name": "clv2ws1"
          }
        ]
      },
      "dataFlows": [
        {
          "streams": [
            "Microsoft-SentinelHealth"
          ],
          "destinations": [
            "clv2ws1"
          ]
        },
        {
          "streams": [
            "Microsoft-ABAPAuditLog"
          ],
          "destinations": [
            "clv2ws1"
          ],
          "transformKql": "source",
          "outputStream": "Microsoft-ABAPAuditLog"
        },
        {
          "streams": [
            "Microsoft-ABAPChangeDocsLog"
          ],
          "destinations": [
            "clv2ws1"
          ],
          "transformKql": "source",
          "outputStream": "Microsoft-ABAPChangeDocsLog"
        },
        {
          "streams": [
            "Microsoft-ABAPUserDetails"
          ],
          "destinations": [
            "clv2ws1"
          ],
          "transformKql": "source",
          "outputStream": "Microsoft-ABAPUserDetails"
        },
        {
          "streams": [
            "Microsoft-ABAPAuthorizationDetails"
          ],
          "destinations": [
            "clv2ws1"
          ],
          "transformKql": "source",
          "outputStream": "Microsoft-ABAPAuthorizationDetails"
        }
      ]
    }
  }
]
