                      },
                      "IncreaseScoreWithRedirectToOtherPort": {
                        "type": "string"
                      },
                      "InlineSafetyTipsEnabled": {
                        "type": "boolean"
                      },
                      "IntraOrgFilterState": {
                        "type": "string"
                      },
                      "IsDefault": {
                        "type": "boolean"
                      },
                      "IsValid": {
