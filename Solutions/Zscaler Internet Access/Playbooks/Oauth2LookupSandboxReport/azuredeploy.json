                                },
                                "HTTP":  {
                                    "runAfter":  {
                                        "Parse_JSON_2":  [
                                            "Succeeded"
                                        ]
                                    },
                                    "type":  "Http",
                                    "inputs":  {
                                        "headers":  {
                                            "Authorization":  "Bearer @{body('Parse_JSON_2')?['access_token']}"
                                        },
                                        "method":  "GET",
                                        "uri":  "https://api.zsapi.net/zia/api/v1/sandbox/report/@{outputs('Extract_MD5_Hash')}?details=full"
