                                                },
                                                "friendlyName":  {
                                                    "type":  "string"
                                                },
                                                "hashValue":  {
                                                    "type":  "string"
                                                }
                                            },
                                            "type":  "object"
                                        }
                                    }
                                },
                                "Parse_JSON_2":  {
                                    "runAfter":  {
                                        "Zscaler-Oauth2-Authentication_2":  [
                                            "Succeeded"
                                        ]
                                    },
                                    "type":  "ParseJson",
                                    "inputs":  {
                                        "content":  "@body('Zscaler-Oauth2-Authentication_2')",
                                        "schema":  {
                                            "properties":  {
                                                "access_token":  {
                                                    "type":  "string"
                                                },
                                                "expires_in":  {
                                                    "type":  "integer"
                                                },
                                                "ext_expires_in":  {
                                                    "type":  "integer"
                                                },
                                                "token_type":  {
                                                    "type":  "string"
                                                }
                                            },
                                            "type":  "object"
                                        }
                                    }
                                },
                                "Zscaler-Oauth2-Authentication_2":  {
                                    "runAfter":  {
                                        "Extract_MD5_Hash":  [
                                            "Succeeded"
                                        ]
                                    },
                                    "type":  "Workflow",
                                    "inputs":  {
                                        "host":  {
                                            "triggerName":  "manual",
                                            "workflow":  {
                                                "id":  "[concat('/subscriptions/', subscription().subscriptionId, '/resourceGroups/', resourceGroup().name, '/providers/Microsoft.Logic/workflows/Zscaler-Oauth2-Authentication')]"
                                            }
                                        }
                                    }
                                }
                            },
                            "runAfter":  {
                                "Entities_-_Get_FileHashes":  [
                                    "Succeeded"
                                ]
                            },
                            "type":  "Foreach"
                        }
                    },
                    "outputs":  {
                    }
                },
                "parameters":  {
