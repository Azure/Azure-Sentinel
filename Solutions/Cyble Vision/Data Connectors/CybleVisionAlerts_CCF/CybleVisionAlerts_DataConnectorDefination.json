{
    "name": "CybleVisionAlerts",
    "apiVersion": "2022-09-01-preview",
    "type": "Microsoft.SecurityInsights/dataConnectorDefinitions",
    "location": "{{location}}",
    "kind": "Customizable",
    "availability": {
        "isPreview": true
    },
    "properties": {
        "connectorUiConfig": {
            "title": "Cyble Vision Alerts",
            "publisher": "Cyble",
            "id": "CybleVisionAlerts",
            "descriptionMarkdown": "The Cyble Vision CCP connector allows the user to ingest Cyble Vision Alerts into Microsoft Sentinel.",
            "graphQueriesTableName": "CybleVisionAlerts_CL",
            "graphQueries": [
                {
                    "metricName": "Total Alerts received",
                    "legend": "Alerts",
                    "baseQuery": "{{graphQueriesTableName}} | summarize TotalAlerts = count()"
                }
            ],
            "sampleQueries": [
                {
                    "description": "Get Sample of Cyble Vision Alerts",
                    "query": "{{graphQueriesTableName}}\n | take 10"
                }
            ],
            "dataTypes": [
                {
                    "name": "CybleVisionAlerts_CL",
                    "lastDataReceivedQuery": "{{graphQueriesTableName}}\n | where TimeGenerated > ago(7d) | summarize Time = max(TimeGenerated)\n | where isnotempty(Time)"
                }
            ],
            "connectivityCriteria": [
                {
                    "type": "HasDataConnectors"
                }
            ],
            "permissions": {
                "resourceProvider": [
                    {
                        "provider": "Microsoft.OperationalInsights/workspaces",
                        "permissionsDisplayText": "Read and Write permissions are required.",
                        "providerDisplayName": "Workspace",
                        "scope": "Workspace",
                        "requiredPermissions": {
                            "write": true,
                            "read": true,
                            "delete": true
                        }
                    }
                ],
                "customs": [
                    {
                        "name": "Cyble Vision API token",
                        "description": "An API Token from Cyble Vision Platform is required. See the [Cyble documentation]('') on how to create an API token."
                    }
                ]
            },
            "instructionSteps": [
                {
                    "title": "STEP 1 - Create a Cyble API token:",
                    "description": "Follow the [Cyble documentation]('') for guidance on this step."
                },
                {
                    "title": "STEP 3 - Enter your API Details:",
                    "description": "Enter the API Token from Cyble Vision Platform below:",
                    "instructions": [
                        {
                            "type": "Textbox",
                            "parameters": {
                                "label": "API Token",
                                "placeholder": "Enter your API Token",
                                "type": "password",
                                "name": "ApiToken"
                            }
                        },
                        {
                            "type": "ConnectionToggleButton",
                            "parameters": {
                                "connectLabel": "connect",
                                "name": "connect"
                            }
                        }
                    ]
                }
            ]
        }
    }
}
