{
  "$schema": "https://schema.management.azure.com/schemas/0.1.2-preview/CreateUIDefinition.MultiVm.json#",
  "handler": "Microsoft.Azure.CreateUIDef",
  "version": "0.1.2-preview",
  "parameters": {
    "basics": [
      {
        "name": "workspace",
        "type": "Microsoft.OperationalInsights/workspaces",
        "label": "Select Log Analytics workspace",
        "toolTip": "Choose your Azure Sentinel workspace",
        "required": true
      },
      {
        "name": "cybleApiKey",
        "type": "Microsoft.Common.TextBox",
        "label": "Cyble API Key",
        "toolTip": "Enter your Cyble API Key for authentication.",
        "constraints": {
          "required": true,
          "regex": "^[a-zA-Z0-9]{32,64}$",
          "validationMessage": "Please enter a valid Cyble API Key."
        },
        "secure": true
      }
    ],
    "steps": [
      {
        "name": "cybleSettings",
        "label": "Cyble Configuration",
        "elements": [
          {
            "name": "cybleApiKey",
            "type": "Microsoft.Common.TextBox",
            "label": "Cyble API Key",
            "toolTip": "Enter your Cyble API Key for authentication.",
            "constraints": {
              "required": true,
              "regex": "^[a-zA-Z0-9]{32,64}$",
              "validationMessage": "Please enter a valid Cyble API Key."
            },
            "secure": true
          }
        ]
      }
    ],
    "outputs": {
      "workspace": "[basics('workspace')]",
      "cyble_api_key": "[basics('cybleApiKey')]",
      "location": "[location()]"
    }
  }
}
