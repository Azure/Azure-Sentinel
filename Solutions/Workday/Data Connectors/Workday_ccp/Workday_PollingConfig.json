[
    {
        "name": "WorkdayCCPPolling",
        "apiVersion": "2022-10-01-preview",
        "type": "Microsoft.SecurityInsights/dataConnectors",
        "location": "{{location}}",
        "kind": "RestApiPoller",
        "properties": {
            "connectorDefinitionName":"WorkdayCCPDefinition",
            "dcrConfig": {
                "dataCollectionEndpoint": "{{dataCollectionEndpoint}}",
                "dataCollectionRuleImmutableId": "{{dataCollectionRuleImmutableId}}",
                "streamName": "Custom-Workday_CL"
            },
            "dataType": "Workday User Activity Logs API",
            "response": {
                "eventsJsonPaths": [
                    "$.data"
                ],
                "format": "json"
            },
            "paging": {
                "pagingType": "Offset",
                "pageSize": 1000,
                "PageSizeParaName": "limit",
                "OffsetParaName": "offset"
            },
            "auth": {
                "type": "OAuth",
                "ClientSecret": "{{clientSecret}}",
                "ClientId": "{{clientId}}",
                "AuthorizationCode": "{{authorizationCode}}",
                "GrantType": "authorization_code",
                "TokenEndpoint": "{{tokenEndpoint}}",
                "tokenEndpointHeaders": {
                    "Accept": "application/json",
                    "Content-Type": "application/x-www-form-urlencoded"
                },
                "authorizationEndpoint": "{{authorizationEndpoint}}",
                "authorizationEndpointQueryParameters": {
                    "redirect": "n"
                },
                "redirectUri": "https://portal.azure.com/TokenAuthorize/ExtensionName/Microsoft_Azure_Security_Insights"
            },
            "request": {
                "apiEndpoint": "{{apiEndpoint}}",
                "rateLimitQPS": 10,
                "queryWindowInMin": 5,
                "httpMethod": "GET",
                "retryCount": 3,
                "timeoutInSeconds": 60,
                "headers": {
                    "Accept": "application/json"
                },
                "StartTimeAttributeName": "from",
                "EndTimeAttributeName": "to",
                "queryParameters": {
                    "type": "userActivity",
                    "from": "{_QueryWindowStartTime}",
                    "to": "{_QueryWindowEndTime}",
                    "instancesReturned": "10"
                }
            },
            "isActive": true
        }
    }
]