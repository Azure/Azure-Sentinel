{
    "name": "VaronisPurviewCustomDCR",
    "apiVersion": "2021-09-01-preview",
    "type": "Microsoft.Insights/dataCollectionRules",
    "location": "[parameters('workspace-location')]",
    "properties": {
        "streamDeclarations": {
            "Custom-varonisresources": {
                "columns": [
                    {
                        "name": "SubWorkload",
                        "type": "dynamic"
                    },
                    {
                        "name": "AssetOwner",
                        "type": "dynamic"
                    },
                    {
                        "name": "AssetPath",
                        "type": "string"
                    },
                    {
                        "name": "Workload",
                        "type": "string"
                    },
                    {
                        "name": "DAC_ModifiedDate",
                        "type": "datetime"
                    },
                    {
                        "name": "AssetType",
                        "type": "string"
                    },
                    {
                        "name": "FeedType",
                        "type": "string"
                    },
                    {
                        "name": "Risks",
                        "type": "dynamic"
                    },
                    {
                        "name": "AdditionalFields",
                        "type": "dynamic"
                    },
                    {
                        "name": "LastAccess",
                        "type": "dynamic"
                    },
                    {
                        "name": "AssetSource",
                        "type": "string"
                    },
                    {
                        "name": "LastModifiedDateTime",
                        "type": "datetime"
                    },
                    {
                        "name": "IngestionTime",
                        "type": "datetime"
                    },
                    {
                        "name": "Classification",
                        "type": "dynamic"
                    },
                    {
                        "name": "TimeGenerated",
                        "type": "datetime"
                    },
                    {
                        "name": "AssetPermissions",
                        "type": "dynamic"
                    },
                    {
                        "name": "CreatedDateTime",
                        "type": "datetime"
                    },
                    {
                        "name": "AADTenantID",
                        "type": "dynamic"
                    },
                    {
                        "name": "IsAssetRemoved",
                        "type": "boolean"
                    },
                    {
                        "name": "Provider",
                        "type": "string"
                    },
                    {
                        "name": "AssetId",
                        "type": "string"
                    }
                ]
            }
        },
        "destinations": {
            "logAnalytics": [
                {
                    "workspaceResourceId": "[variables('workspaceResourceId')]",
                    "name": "varonispurview"
                }
            ]
        },
        "dataFlows": [
            {
                "streams": [
                    "Custom-varonisresources"
                ],
                "destinations": [
                    "varonispurview"
                ],
                "transformKql": "source\n \n\n",
                "outputStream": "Custom-varonisresources_CL"
            }
        ],
        "dataCollectionEndpointId": "[concat('/subscriptions/',parameters('subscription'),'/resourceGroups/',parameters('resourceGroupName'),'/providers/Microsoft.Insights/dataCollectionEndpoints/',parameters('workspace'))]"
    }
}