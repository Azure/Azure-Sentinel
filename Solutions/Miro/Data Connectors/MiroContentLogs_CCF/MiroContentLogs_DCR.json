[
    {
        "name": "MiroContentLogsDCR",
        "apiVersion": "2024-03-11",
        "type": "Microsoft.Insights/dataCollectionRules",
        "location": "{{location}}",
        "properties": {
            "streamDeclarations": {
                "Custom-MiroContentLogs_CL": {
                    "columns": [
                        {
                            "name": "id",
                            "type": "string"
                        },
                        {
                            "name": "contentId",
                            "type": "string"
                        },
                        {
                            "name": "actionType",
                            "type": "string"
                        },
                        {
                            "name": "actionTime",
                            "type": "string"
                        },
                        {
                            "name": "actor",
                            "type": "dynamic"
                        },
                        {
                            "name": "itemType",
                            "type": "string"
                        },
                        {
                            "name": "itemId",
                            "type": "string"
                        },
                        {
                            "name": "state",
                            "type": "dynamic"
                        },
                        {
                            "name": "relationships",
                            "type": "dynamic"
                        }
                    ]
                }
            },
            "dataSources": {},
            "destinations": {
                "logAnalytics": [
                    {
                        "workspaceResourceId": "{{workspaceResourceId}}",
                        "name": "clv2ws1"
                    }
                ]
            },
            "dataFlows": [
                {
                    "streams": [
                        "Custom-MiroContentLogs_CL"
                    ],
                    "destinations": [
                        "clv2ws1"
                    ],
                    "transformKql": "source\n| extend TimeGenerated = todatetime(actionTime)\n| extend actionTime = todatetime(actionTime)\n| extend actor_id = iff(isnull(actor), \"\", tostring(actor.id))\n| extend actor_email = iff(isnull(actor), \"\", tostring(actor.email))\n| extend actor_name = iff(isnull(actor), \"\", tostring(actor.name))\n| project TimeGenerated, id, actionTime, actionType, actor_id, actor_email, actor_name, contentId, itemId, itemType, relationships, state",
                    "outputStream": "Custom-MiroContentLogs_CL"
                }
            ],
            "dataCollectionEndpointId": "[concat('/subscriptions/',variables('subscriptionID'),'/resourceGroups/',resourceGroup().name,'/providers/Microsoft.Insights/dataCollectionEndpoints/',{{dataCollectionEndpointId}}"
        }
    }
]
