{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "workspace-location": {
      "type": "string"
    },
    "username": {
      "type": "securestring"
    },
    "password": {
      "type": "securestring"
    },
    "apiUrl": {
      "type": "string"
    },
    "dcrConfig": {
      "type": "object",
      "defaultValue": {
        "dataCollectionEndpoint": "",
        "dataCollectionRuleImmutableId": ""
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.SecurityInsights/dataConnectors",
      "apiVersion": "2021-10-01-preview",
      "name": "Cyolo-Sentinel-Analytics-Connector",
      "location": "[parameters('workspace-location')]",
      "kind": "RestApiPoller",
      "properties": {
        "connectorDefinitionName": "CyoloSentinelDataConnector",
        "dataType": "Custom-CyoloSentinelAnalyticsTable_CL",
        "auth": {
          "type": "Basic",
          "userName": "[parameters('username')]",
          "password": "[parameters('password')]"
        },
        "request": {
          "apiEndpoint": "[concat(parameters('apiUrl'), '/v1/analytics_log')]",
          "headers": {
            "Accept": "application/json"
          }
        },
        "pagination": {
          "type": "Page",
          "pageParamName": "_page",
          "startPage": 1,
          "maxPages": 10000
        },
        "response": {
          "eventsJsonPaths": [
            "$.data[*]"
          ]
        },
        "dcrConfig": {
          "streamName": "Custom-Cyolo-Sentinel-Analytics-DCR",
          "dataCollectionEndpoint": "[parameters('dcrConfig').dataCollectionEndpoint]",
          "dataCollectionRuleImmutableId": "[parameters('dcrConfig').dataCollectionRuleImmutableId]"
        }
      }
    },
    {
      "type": "Microsoft.SecurityInsights/dataConnectors",
      "apiVersion": "2021-10-01-preview",
      "name": "Cyolo-Sentinel-Audit-Connector",
      "location": "[parameters('workspace-location')]",
      "kind": "RestApiPoller",
      "properties": {
        "connectorDefinitionName": "CyoloSentinelDataConnector",
        "dataType": "Custom-CyoloSentinelAuditTable_CL",
        "auth": {
          "type": "Basic",
          "userName": "[parameters('username')]",
          "password": "[parameters('password')]"
        },
        "request": {
          "apiEndpoint": "[concat(parameters('apiUrl'), '/v1/audit_log')]",
          "headers": {
            "Accept": "application/json"
          }
        },
        "pagination": {
          "type": "Page",
          "pageParamName": "_page",
          "startPage": 1,
          "maxPages": 10000
        },
        "response": {
          "eventsJsonPaths": [
            "$.data[*]"
          ]
        },
        "dcrConfig": {
          "streamName": "Custom-Cyolo-Sentinel-Audit-DCR",
          "dataCollectionEndpoint": "[parameters('dcrConfig').dataCollectionEndpoint]",
          "dataCollectionRuleImmutableId": "[parameters('dcrConfig').dataCollectionRuleImmutableId]"
        }
      }
    },
    {
      "type": "Microsoft.SecurityInsights/dataConnectors",
      "apiVersion": "2021-10-01-preview",
      "name": "Cyolo-Sentinel-System-Connector",
      "location": "[parameters('workspace-location')]",
      "kind": "RestApiPoller",
      "properties": {
        "connectorDefinitionName": "CyoloSentinelDataConnector",
        "dataType": "Custom-CyoloSentinelSystemTable_CL",
        "auth": {
          "type": "Basic",
          "userName": "[parameters('username')]",
          "password": "[parameters('password')]"
        },
        "request": {
          "apiEndpoint": "[concat(parameters('apiUrl'), '/v1/system_log')]",
          "headers": {
            "Accept": "application/json"
          }
        },
        "pagination": {
          "type": "Page",
          "pageParamName": "_page",
          "startPage": 1,
          "maxPages": 10000
        },
        "response": {
          "eventsJsonPaths": [
            "$.data[*]"
          ]
        },
        "dcrConfig": {
          "streamName": "Custom-Cyolo-Sentinel-System-DCR",
          "dataCollectionEndpoint": "[parameters('dcrConfig').dataCollectionEndpoint]",
          "dataCollectionRuleImmutableId": "[parameters('dcrConfig').dataCollectionRuleImmutableId]"
        }
      }
    }
  ]
}
