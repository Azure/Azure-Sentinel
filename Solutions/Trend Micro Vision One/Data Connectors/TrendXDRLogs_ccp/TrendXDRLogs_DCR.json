[
    {
        "name": "TrendMicroVisionOneXDRDCR",
        "apiVersion": "2023-03-11",
        "type": "Microsoft.Insights/dataCollectionRules",
        "location": "{{location}}",
        "properties": {
            "dataCollectionEndpointId": "{{dataCollectionEndpointId}}",
            "streamDeclarations": {
                "Custom-TrendVisionOne": {
                    "columns": [
                        {
                            "name": "uuid",
                            "type": "string"
                        },
                        {
                            "name": "detectedDateTime",
                            "type": "datetime"
                        },
                        {
                            "name": "filters",
                            "type": "dynamic"
                        },
                        {
                            "name": "detail",
                            "type": "dynamic"
                        },
                        {
                            "name": "ingestedDateTime",
                            "type": "datetime"
                        },
                        {
                            "name": "entityType",
                            "type": "string"
                        },
                        {
                            "name": "entityName",
                            "type": "string"
                        },
                        {
                            "name": "endpoint",
                            "type": "dynamic"
                        }
                    ]
                }
            },
            "destinations": {
                "logAnalytics": [
                    {
                        "workspaceResourceId": "{{workspaceResourceId}}",
                        "name": "clv2ws1"
                    }
                ]
            },
            "dataFlows": [
                {
                    "streams": [
                        "Custom-TrendVisionOne"
                    ],
                    "destinations": [
                        "clv2ws1"
                    ],
                    "transformKql": "source | extend TimeGenerated = now() | extend Detail = parse_json(detail) | extend Endpoint = parse_json(endpoint)",
                    "outputStream": "Custom-<table name from table.json file without space if present else no need to specify property>"
                }
            ]
        }
    }
]