[
    {
        "type": "Microsoft.SecurityInsights/dataConnectors",
        "apiVersion": "2025-03-01",
        "name": "TrendMicroVisionOneXDR",
        "kind": "RestApiPoller",
        "properties": {
            "connectorDefinitionName": "TrendXDRLogsCCPDefinition",
            "dataType": "TrendMicroXDROATV2_CL",
            "auth": {
                "type": "APIKey",
                "ApiKey": "[[parameters('apikey')]",
                "ApiKeyName": "Authorization",
                "ApiKeyIdentifier": "Bearer"
            },
            "request": {
                "apiEndpoint": "{{region}}/v3.0/oat/detections",
                "httpMethod": "GET",
                "queryWindowInMin": 10,
                "queryTimeFormat": "yyyy-MM-ddTHH:mm:ssZ",
                "headers": {
                    "Content-Type": "application/json",
                    "User-Agent": "Scuba"
                },
                "queryParameters": {
                    "ingestedStartDateTime": "{_QueryWindowStartTime}",
                    "ingestedEndDateTime": "{_QueryWindowEndTime}"
                }
            },
            "response": {
                "eventsJsonPaths": [
                    "$.items"
                ],
                "format": "json"
            },
            "dcrConfig": {
                "streamName": "Custom-TrendVisionOne",
                "dataCollectionEndpoint": "{{dataCollectionEndpoint}}",
                "dataCollectionRuleImmutableId": "{{dataCollectionRuleImmutableId}}"
            },
            "paging": {
                "pagingType": "LinkHeader",
                "linkHeaderTokenJsonPath": "$.nextLink"
            }
        }
    }
]