[
    {
        "name": "QscoutAppEventsDCR",
        "apiVersion": "2024-03-11",
        "type": "Microsoft.Insights/dataCollectionRules",
        "location": "{{location}}",
        "properties": {
            "streamDeclarations": {
                "Custom-QscoutAppEvents_CL": {
                    "columns": [
                        {
                            "name": "app_id",
                            "type": "string"
                        },
                        {
                            "name": "org_id",
                            "type": "string"
                        },
                        {
                            "name": "package",
                            "type": "string"
                        },
                        {
                            "name": "version",
                            "type": "string"
                        },
                        {
                            "name": "platform",
                            "type": "string"
                        },
                        {
                            "name": "mdm_source",
                            "type": "string"
                        },
                        {
                            "name": "mdm_device_id",
                            "type": "string"
                        },
                        {
                            "name": "device_os_build_version",
                            "type": "string"
                        },
                        {
                            "name": "result_type",
                            "type": "string"
                        },
                        {
                            "name": "results",
                            "type": "dynamic"
                        },
                        {
                            "name": "received_at",
                            "type": "datetime"
                        }
                    ]
                }
            },
            "dataSources": {},
            "destinations": {
                "logAnalytics": [
                    {
                        "workspaceResourceId": "{{workspaceResourceId}}",
                        "name": "clv2ws1"
                    }
                ]
            },
            "dataFlows": [
                {
                    "streams": [
                        "Custom-QscoutAppEvents_CL"
                    ],
                    "destinations": [
                        "clv2ws1"
                    ],
                    "transformKql": "source\n| extend TimeGenerated = todatetime(received_at)\n",
                    "outputStream": "Custom-QscoutAppEvents_CL"
                }
            ],
            "dataCollectionEndpointId": "[concat('/subscriptions/',variables('subscriptionID'),'/resourceGroups/',resourceGroup().name,'/providers/Microsoft.Insights/dataCollectionEndpoints/',{{dataCollectionEndpointId}}"
        }
    }
]