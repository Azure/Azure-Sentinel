[
    {
        "name": "IONIXDCR",
        "apiVersion": "2021-09-01-preview",
        "type": "Microsoft.Insights/dataCollectionRules",
        "location": "{{location}}",
        "properties": {
            "dataCollectionEndpointId": "{{dataCollectionEndpointId}}",
            "streamDeclarations": {
                "Custom-IONIX_ActionItems_Input": {
                    "columns": [
                        {
                            "name": "id",
                            "type": "string"
                        },
                        {
                            "name": "TimeGenerated",
                            "type": "datetime"
                        },
                        {
                            "name": "title",
                            "type": "string"
                        },
                        {
                            "name": "summary",
                            "type": "string"
                        },
                        {
                            "name": "description",
                            "type": "string"
                        },
                        {
                            "name": "asset",
                            "type": "string"
                        },
                        {
                            "name": "asset_type",
                            "type": "int"
                        },
                        {
                            "name": "type",
                            "type": "string"
                        },
                        {
                            "name": "urgency",
                            "type": "real"
                        },
                        {
                            "name": "current_state",
                            "type": "string"
                        },
                        {
                            "name": "first_opened_at",
                            "type": "datetime"
                        },
                        {
                            "name": "last_opened_at",
                            "type": "datetime"
                        },
                        {
                            "name": "updated_time",
                            "type": "datetime"
                        },
                        {
                            "name": "acknowledged_by",
                            "type": "string"
                        },
                        {
                            "name": "tags",
                            "type": "dynamic"
                        },
                        {
                            "name": "cves",
                            "type": "dynamic"
                        },
                        {
                            "name": "groups",
                            "type": "dynamic"
                        }
                    ]
                }
            },
            "destinations": {
                "logAnalytics": [
                    {
                        "workspaceResourceId": "{{workspaceResourceId}}",
                        "name": "IONIX-Destination"
                    }
                ]
            },
            "dataFlows": [
                {
                    "streams": [
                        "Custom-IONIX_ActionItems_Input"
                    ],
                    "destinations": [
                        "IONIX-Destination"
                    ],
                    "transformKql": "source | extend id_s = tostring(id), host_s = tostring(asset), Category = tostring(type), urgency_d = todouble(urgency), is_open_b = true, opening_datetime_t = todatetime(first_opened_at), solution_s = tostring(type), current_state_s = tostring(current_state), title_s = tostring(title), summary_s = tostring(summary), description_s = tostring(description) | project TimeGenerated, id_s, host_s, Category, urgency_d, is_open_b, opening_datetime_t, solution_s, current_state_s, title_s, summary_s, description_s",
                    "outputStream": "Custom-CyberpionActionItems_CL"
                }
            ]
        }
    }
]
